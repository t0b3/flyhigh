#!/bin/bash

. /usr/share/debconf/confmodule

set -e

case "$1" in
	configure)
		# Compatibility symlinks into /usr/doc
		dbvers=$(echo "SELECT Time FROM LastModified WHERE Name='DataBaseVersion'" | mysql -u flyhigh --password=flyhigh -D flyhigh_v2)

		if [ -z "$dbvers" ]
		then
			echo "Setup flyhigh SQL database. Enter mysqldb root password."
			mysql -u root -p < /usr/share/flyhigh/flyhigh.sql
		fi
		;;
	*)
		#
		# Unknown action - do nothing.
		#
		exit 0
		;;
esac
