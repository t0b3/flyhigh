use for configuration http://localhost/phpmyadmin/
# apt-get install phpmyadmin

enable InnoDB.
# vi /etc/mysql/my.cnf
#skip-innodb
innodb_data_home_dir=/var/lib/mysql
innodb_data_file_path=ibdata1:10M:autoextend

# /etc/init.d/mysql restart

create a new user "kflychart" with password "kflychart" from localhost with 
these rights:
SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, FILE, INDEX, ALTER, CREATE 
TEMPORARY TABLES

create initial database
$ mysql -u kflychart -p < CreateTables.sql
Enter password:

backup the database
$ mysqldump database kflychart -h localhost -u kflychart -p kflychart > kflychart.backup

restore the database
$ mysql -u kflychart -p kflychart < kflychart.backup
Enter password:

remove the database
$ mysqladmin -u kflychart -p drop kflychart
Enter password:

